@page
@model DemoPRN1.Pages.Accounts.AddAdminModel
@{
    ViewData["Title"] = "Add Account";
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center mt-4">Add Account</h2>

<form method="post" class="container mt-4">
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" id="Email" name="Email" asp-for="Account.Email" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="Password" class="form-label">Password</label>
        <input type="password" id="Password" name="Password" asp-for="Account.Password" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="FullName" class="form-label">Full Name</label>
        <input type="text" id="FullName" name="FullName" asp-for="Account.FullName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="PhoneNumber" class="form-label">Phone Number</label>
        <input type="tel" id="PhoneNumber" name="PhoneNumber" asp-for="Account.PhoneNumer" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="Address" class="form-label">Address</label>
        <input type="text" id="Address" name="Address" asp-for="Account.Address" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Add Account</button>
</form>
